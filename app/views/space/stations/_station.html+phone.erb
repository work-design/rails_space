<div class="media">
  <div data-controller="empty" class="media-left">
    <%= image_tag model.logo.variant(resize_to_limit: [150, 150]), class: 'image is-64x64' if model.logo.attached? %>
  </div>
  <div class="media-content">
    <span class="weui-media-box__title"><%= model.name %></span>
    <span class="weui-media-box__desc">
      <span><%= model.area.full_name %></span>
      <span><%= model.detail %></span>
    </span>
  </div>
  <%= link_to({ controller: '/factory/productions', station_id: model.id }, state: 'clear', class: 'weui-media-box__ft pr-4') do %>
    <p>去下单</p>
  <% end %>
</div>
