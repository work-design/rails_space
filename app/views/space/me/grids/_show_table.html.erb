<div>
  <dt><%= Space::Grid.human_attribute_name(:name) %></dt>
  <dd><%= @grid.name %></dd>
</div>
<div>
  <dt><%= Space::Grid.human_attribute_name(:code) %></dt>
  <dd><%= @grid.code %></dd>
</div>
<div>
  <dt>
    <span><%= Space::Grid.human_attribute_name(:width) %></span>
    <span><%= Space::Grid.human_attribute_name(:length) %></span>
    <span><%= Space::Grid.human_attribute_name(:height) %></span>
  </dt>
  <dd>
    <span><%= @grid.width %></span>
    <span><%= @grid.length %></span>
    <span><%= @grid.height %></span>
  </dd>
</div>
<div>
  <dt><%= Space::Grid.human_attribute_name(:floor) %></dt>
  <dd><%= @grid.floor %></dd>
</div>
